{
    "compilerOptions": {
        "baseUrl": "src",
        "moduleResolution": "node",
        "module": "ES2020",
        "target": "ES2020",
        "strictFunctionTypes": true,
        "noImplicitReturns": true,
        "lib": ["WebWorker", "ES2023", "DOM"],
        "paths": {
            "*.ts": ["*"]
        },
        "allowImportingTsExtensions": true,
        "downlevelIteration": true,
        "skipLibCheck": true
    },
    "include": ["src/*.ts"],
}
 